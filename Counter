public class SimpleCounter {

  private int count;

  public SimpleCounter() {
    this.count = 0;
  }

  public void increment() {
    this.count++;
  }

  public int getCount() {
    return this.count;
  }

  public static void main(String[] args) {
    SimpleCounter counter = new SimpleCounter();
    counter.increment();
    counter.increment();

    System.out.println("Current count: " + counter.getCount());
  }
}
